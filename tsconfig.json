{
  "compileOnSave":   false,
  "compilerOptions": {
    "jsx":              "react",
    "sourceMap":        true,
    "declaration":      true,
    "moduleResolution": "node",
    "target":           "es5",
    "module":           "commonjs",
    "outDir":           "./dist",
    "lib":              ["es2015"]
  },
  "include":         [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude":         [
    "node_modules"
  ]
}